{
  "name": "infinite-react-carousel",
  "version": "1.0.1",
  "description": "Infinite carousel for react",
  "main": "./lib",
  "files": [
    "dist",
    "lib"
  ],
  "scripts": {
    "babel": "babel ./src --out-dir ./lib",
    "dev": "run-p dev:client",
    "dev:client": "webpack-dev-server --mode development --devtool inline-source-map --hot --colors --progress --config ./webpack.dev.config.js",
    "build": "bash ./script/build.sh",
    "build:gh": "bash ./script/build-gh.sh",
    "build:client": "webpack --mode production --progress --color --devtool false",
    "build:gh-client": "webpack --mode production --progress --color --devtool false --config ./webpack.gh.config.js",
    "prepublishOnly": "npm run lint && npm run build",
    "lint": "eslint src"
  },
  "author": "Hans wu",
  "repository": {
    "type": "git",
    "url": "https://github.com/g787543/infinite-react-carousel"
  },
  "keywords": [
    "carousel",
    "slider",
    "react",
    "react-component"
  ],
  "devDependencies": {
    "@babel/cli": "^7.0.0",
    "@babel/core": "^7.1.2",
    "@babel/plugin-proposal-class-properties": "^7.1.0",
    "@babel/plugin-transform-runtime": "^7.6.2",
    "@babel/preset-env": "^7.1.0",
    "@babel/preset-react": "^7.0.0",
    "autoprefixer": "^9.6.4",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^9.0.0",
    "babel-jest": "^24.8.0",
    "babel-loader": "^8.0.4",
