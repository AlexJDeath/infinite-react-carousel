    "opn": "^6.0.0",
    "portfinder": "^1.0.24",
    "postcss-loader": "^3.0.0",
    "prettier": "^1.14.3",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "sass-loader": "^8.0.0",
    "style-loader": "^0.23.0",
    "uglifyjs-webpack-plugin": "^2.1.2",
    "url-loader": "^1.1.1",
    "webpack": "^4.21.0",
    "webpack-auto-inject-version": "^1.1.0",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.9",
    "webpack-merge": "^4.2.2"
